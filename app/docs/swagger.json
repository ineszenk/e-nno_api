{
  "openapi": "3.0.0",
  "info": {
    "title": "E-nno Energy Dashboard API",
    "description": "This API allows to retrieve E-nno's device data for the energy dashboard",
    "contact": {
      "email": "support@e-nno.ch"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://enno-api.herokuapp.com/",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Login",
      "description": "Users Sign in"
    },
    {
      "name": "KPIs",
      "description": "KPIs data retrieval"
    },
    {
      "name": "Graphics",
      "description": "Graphics data retrieval"
    },
    {
      "name": "Informations",
      "description": "Static data retrieval"
    }

  ],
  "paths": {
    "/user/login": {
      "post": {
        "tags": [
        "Login"
        ],
        "summary": "User Sign in",
        "description": "Logs a user to the system",
        "operationId": "logUser",
        "requestBody": {
          "description": "User's Credentials",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User_credential"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User informations after succesful log in",
            "content": {
              "application/json":   { 
                "schema": {
                      "$ref": "#/components/schemas/Authorization"
                    }
                }
              }

            },
          "401": {
            "description": "Invalid credential"
          }
        }
      }
    },    "/graphics/{key}": {
      "get": {
        "tags": [
        "Graphics"
        ],
        "summary": "Graphic's data retrieval",
        "description": "Returns graphic's data",
        "operationId": "getGraphicsData",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "User's access token",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE1NDg3NzYwMTR9.VRqDU8OJ4tf-LUqoUC64biIl6V9FEnQtfLZcUKKHnOY"
            }
          },

          {
            "name": "key",
            "in": "path",
            "description": "Device key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "ab57a087-7f6a-4303-9673-b3ad33497cfe"
            }
          }

        ],
        "responses": {
          "200": {
            "description": "Graphics data updated every 24h",
            "content": {
              "application/json":   { 
                "schema": {
                      "$ref": "#/components/schemas/Graphics"
                    }
                }
              }

            },
          "401": {
            "description": "Invalid credential"
          }
        }
      }
    },
        "/kpi/{key}": {
      "get": {
        "tags": [
        "KPIs"
        ],
        "summary": "Device KPIs",
        "description": "Returns device's KPIs",
        "operationId": "getDeviceData",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "User's access token",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE1NDg3NzYwMTR9.VRqDU8OJ4tf-LUqoUC64biIl6V9FEnQtfLZcUKKHnOY"
            }
          },

          {
            "name": "key",
            "in": "path",
            "description": "Device key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "ab57a087-7f6a-4303-9673-b3ad33497cfe"
            }
          }

        ],
        "responses": {
          "200": {
            "description": "KPI updated every 24h",
            "content": {
              "application/json":   { 
                "schema": {
                      "$ref": "#/components/schemas/KPI"
                    }
                }
              }

            },
          "401": {
            "description": "Invalid credential"
          }
        }
      }
    },
    "/static/{key}": {
      "get": {
        "tags": [
        "Informations"
        ],
        "summary": "Device informations",
        "description": "Returns device's static informations",
        "operationId": "getStaticData",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "User's access token",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE1NDg3NzYwMTR9.VRqDU8OJ4tf-LUqoUC64biIl6V9FEnQtfLZcUKKHnOY"
            }
          },

          {
            "name": "key",
            "in": "path",
            "description": "Device key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "ab57a087-7f6a-4303-9673-b3ad33497cfe"
            }
          }

        ],
        "responses": {
          "200": {
            "description": "Device Information data",
            "content": {
              "application/json":   { 
                "schema": {
                      "$ref": "#/components/schemas/Informations"
                    }
                }
              }

            },
          "401": {
            "description": "Invalid credential"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User_credential": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "example@company.com"
          },
          "password": {
            "type": "string",
            "example": "1234"
          }
        }
      },
    "Authorization": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string",
          "description": "Access token used to authorize the user",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE1NDg3NzYwMTR9.VRqDU8OJ4tf-LUqoUC64biIl6V9FEnQtfLZcUKKHnOY"
        }
      }
    },
    "KPI": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "example": "KPIs data"
        },
        "cum_conso_pred":{
          "type": "float",
          "example":5063.5,
          "description":"Cumulated consumption predicted in kWh"
        },
        "cum_conso_measured":{
          "type": "float",
          "example":5465.5,
          "description":"Cumulated consumption measured in kWh"

        },
        "co2_savings":{
          "type": "float",
          "example":14.5,
          "description":"Cumulated Co2 savings in TCO2"

        },
        "financial_savings":{
          "type": "float",
          "example":1.4,
          "description":"Cumulated Financial savings in kCHF"
        },
        "energy_savings":{
          "type": "float",
          "example":1.4,
          "description":"Cumulated Energy savings in kWh"
        },
        "idc":{
          "type":"integer",
          "example": 579 ,
          "description":"Cumulated IDC reduction in MJ/m2"
        },
        "performance":{
          "type": "float",
          "example":0.10,
          "description":"Cumulated energy savings Perfomance(%)"
        },
        "slope_ref":{
          "type": "float",
          "example":-11.18,
          "description":"Slope to plot reference regression"
        },
        "intercept_ref":{
          "type": "float",
          "example":323.02,
          "description":"Intercept to plot reference regression"
        },
        "slope_opti":{
          "type": "float",
          "example":-11.18,
          "description":"Slope to plot opti regression"
        },
        "intercept_opti":{
          "type": "float",
          "example":323.02,
          "description":"Intercept to plot opti regression"
        },
      "emulator_serial":{
        "type":"string",
        "example": "2020.11.30.001"
      },
      "opti":{
        "type": "boolean",
        "example":true,
        "description": "Optimisation state"
      },
      "last_updated":{
        "type": "datetime",
        "example":"2020-12-01 00:00:00",
        "description": "Last data update"
      },
      "start_optimisation_period":{
        "type": "datetime",
        "example":"2020-11-01 00:00:00",
        "description": "Optimisation start date"
      },
      "id_icon":{
        "type": "integer",
        "example":"2",
        "description": "Meteo icon id"
      },
      "forecasted_mean_tt":{
        "type": "integer",
        "example":"10",
        "description": "Mean t° forecasted"
      }
        }
      },
      "Graphics": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Graphic's data"
          },
          "tmp":{
            "type": "datetime",
            "example":"2020-12-01 00:00:00",
            "description":"Data timestamp"
    
          },

          "tt":{
            "type": "float",
            "example":78,
            "description":"Consumption measured (kWh) in the last 24h"
    
          },
          "conso_pred":{
            "type": "float",
            "example":65.5,
            "description":"Consumption predicted (kWh) in the last 24h"
    
          },
          "conso_measured":{
            "type": "float",
            "example":62.5,
            "description":"Consumption measured (kWh) in the last 24h"
          },
          "opti":{
            "type": "boolean",
            "example":true,
            "description": "Optimisation state"
          },
        "emulator_serial":{
          "type":"string",
          "example": "2020.11.30.001"
        }
  }
},
"Informations":{
  "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Device static data"
          },
          "emulator_serial":{
            "type":"string",
            "example":"2020.11.30.001"
          },
          "adresse":{
            "type":"string",
            "example":"Chemin de la tour de Champel 4"
          },
          "npa":{
            "type":"integer",
            "example":"1204"
          },
          "commune":{
            "type":"string",
            "example":"Genève"
          },
          "agent_energetique":{
            "type":"string",
            "example":"Gaz"
          },
          "affectation":{
            "type":"string",
            "example":"Habitat Collectif"
          },
          "client":{
            "type":"string",
            "example":"Client A"
          },
          "gerance":{
            "type":"string",
            "example":"Regis A SA"
          },
          "manager":{
            "type":"string",
            "example":"Chauffagiste A"
          }

}
}
}}
}
